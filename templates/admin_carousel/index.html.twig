{% extends 'base-backend.html.twig' %}

{% block title %}
    Carousel
{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center">
        <h1>
            Carousel
        </h1>
        <div class="d-flex">
        <form method="post" class="d-flex">
            <input type="text" name="search" class="form-control" placeholder="Rechercher">
                <button type="submit" class="btn btn-dark ">
                    <i data-feather="search"></i>
                </button>
            </form>
            <a href="{{ path('app_admin_carousel_new') }}" class="btn btn-success ms-3">
                Nouveau
                    
            </a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    ImageName
                </th>
                <th>
                    Text
                </th>
                <th>
                    Title
                </th>
                <th>Tag</th>
                <th>
                    ImageName1
                </th>
                <th>
                    ImageName2
                </th>
                <th>
                    ImageName3
                </th>
                <th class="text-end">
                    actions
                </th>
            </tr>
        </thead>
        <tbody>
            {% for carousel in carousels %}
                <tr>
                    <td>
                        {{ carousel.id }}
                    </td>
                    <td>
                        {{ carousel.imageName }}
                    </td>
                    <td>
                        {{ carousel.text }}
                    </td>
                    <td>
                        {{ carousel.title }}
                    </td>
                    <td>{{ carousel.tag }}</td>
                    <td>
                        <a href="{{ asset('images/carousels/' ~ carousel.imageName1) }}" data-lightbox="{{ carousel.imageName1}}">
                        <img src="{{ asset('images/carousels/' ~ carousel.imageName1) }}" class="img-list" alt="{{ carousel.imageName1 }}"></td>
                    </a>
                    <td>
                        <a href="{{ asset('images/carousels/' ~ carousel.imageName2) }}" data-lightbox="{{ carousel.imageName2}}">
                            <img src="{{ asset('images/carousels/' ~ carousel.imageName2) }}" class="img-list" alt="{{ carousel.imageName2 }}"></td>
                        </a>
                            <td>
                                <a href="{{ asset('images/carousels/' ~ carousel.imageName3) }}" data-lightbox="{{ carousel.imageName3}}">
                                <img src="{{ asset('images/carousels/' ~ carousel.imageName3) }}" class="img-list" alt="{{ carousel.imageName3 }}"></td>
                            </a>
                                <td class="text-end">
                                <div class="d-flex">
                                    <a href="{{ path('app_admin_carousel_show', {'id': carousel.id}) }}" class="btn btn-dark btn-sm">
                                        <i class="align-middle" data-feather="eye"></i>
                                    </a>
                                    <a href="{{ path('app_admin_carousel_edit', {'id': carousel.id}) }}" class="btn btn-success btn-sm">
                                        <i class="align-middle" data-feather="edit-3"></i>
                                    </a>
                                    {{ include('admin_carousel/_delete_form.html.twig') }}
                                </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="9">
                                    Auccune entrée trouvée
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
                <div class="navigation">
                {{ knp_pagination_render(carousels) }}
            </div>

            {% endblock %}
            