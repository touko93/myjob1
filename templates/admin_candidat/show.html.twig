{% extends 'base-backend.html.twig' %}

{% block title %}Candidat{% endblock %}

{% block body %}
<a href="{{ path('app_admin_candidat_index') }}" class="btn btn-primary btn-sm mt-3">
Retour a la Liste
    
</a>
    <h1>Candidat</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ candidat.id }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ candidat.firstName }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ candidat.lastName }}</td>
            </tr>
            <tr>
                <th>Adres</th>
                <td>{{ candidat.adres }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ candidat.email }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ candidat.phone }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ candidat.updatedAt ? candidat.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>IsActive</th>
                <td>{{ candidat.isActive ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>ImageName</th>
                <td>{{ candidat.imageName }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ candidat.slug }}</td>
            </tr>
        </tbody>
    </table>
    <div class="d-flex justify-content-between align-center">
    <a href="{{ path('app_admin_candidat_edit', {'id': candidat.id}) }}" class="btn btn-success">
        <i class="align-middle" data-feather="edit-2"></i>
    </a>

    {{ include('admin_candidat/_delete_form.html.twig') }}
    </div>
{% endblock %}
