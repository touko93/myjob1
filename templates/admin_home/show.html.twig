{% extends 'base-backend.html.twig' %}

{% block title %}
    Home
{% endblock %}

{% block body %}
    <a href="{{ path('app_admin_home_index') }}" class="btn btn-primary btn-sm mt-3">
        Retour a la Liste
            
    </a>
    <h1 class="mt-3">
        Home
    </h1>

    <table class="table">
        <tbody>
            <tr>
                <th>
                    Id
                </th>
                <td>
                    {{ home.id }}
                </td>
            </tr>
            <tr>
                <th>
                    Titre
                </th>
                <td>
                    {{ home.titre }}
                </td>
            </tr>
            <tr>
                <th>
                    Texte
                </th>
                <td>
                    {{ home.texte }}
                </td>
            </tr>
            <tr>
                <th>
                    Signature
                </th>
                <td>
                    {{ home.signature }}
                </td>
            </tr>
            <tr>
                <th>
                    IsActive
                </th>
                <td>
                    {{ home.isActive ? 'Yes' : 'No' }}
                </td>
            </tr>
        </tbody>
    </table>
    <div class="d-flex justify-content-between align-center">
        <a href="{{ path('app_admin_home_edit', {'id': home.id}) }}" class="btn btn-success">
            <i class="align-middle" data-feather="edit-2"></i>
        </a>

        {{ include('admin_home/_delete_form.html.twig') }}
    </div>
{% endblock %}
