{% extends 'base-backend.html.twig' %}

{% block title %}Cartes{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center">
<h1>Cartes</h1>
    <div class="d-flex">
    <form method="post" class="d-flex">
        <input type="text" name="search" class="form-control" placeholder="Rechercher">
            <button type="submit" class="btn btn-dark ">
                <i data-feather="search"></i>
            </button>
        </form>
        <a href="{{ path('app_admin_cartes_new') }}" class="btn btn-success ms-3">
            Nouveau
                
        </a>
    </div>
</div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Texte</th>
                {# <th>ImageName</th> #}
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for carte in cartes %}
            <tr>
                <td>{{ carte.id }}</td>
                <td>{{ carte.titre }}</td>
                <td>{{ carte.texte }}</td>
                {# <td>{{ carte.imageName }}</td> #}
                <td class="text-end">
                <div class="d-flex">
                    <a href="{{ path('app_admin_cartes_show', {'id': carte.id}) }}" class="btn btn-dark btn-sm"><i class="align-middle" data-feather="eye"></i></a>
                    <a href="{{ path('app_admin_cartes_edit', {'id': carte.id}) }}" class="btn btn-success btn-sm"><i class="align-middle" data-feather="edit-3"></i></a>
                    {{ include('admin_cartes/_delete_form.html.twig') }}
                </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Auccune entrée trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="navigation">
                {{ knp_pagination_render(cartes) }}
            </div>


{% endblock %}
